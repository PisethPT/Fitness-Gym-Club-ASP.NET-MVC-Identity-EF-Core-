@model User
@{
    ViewData["Title"] = "About Me";
}

<h1>About Me</h1>
<div class="card">
    <div class="card-header">
        <div class="d-flex form-group justify-content-between">
            <a href="/Home/Index" class="btn btn-primary">Back</a>
        </div>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-center align-items-center text-center flex-column">
            <img class="profile" src="~/image/user.jpg" />
            <h5>@Model.FirstName @Model.LastName</h5>
            <span class="text-secondary">@Model.Gender</span>
        </div>
    </div>

    <div class="card-body">
        <form asp-action="UpdateAboutMe" asp-controller="Home" method="post" id="updateForm" onsubmit="return validatePasswords()">
            <div class="d-flex justify-content-between ps-2 pe-2">
                <div class="card w-45">
                    <div class="card-body">
                        <div class="form-group">
                            <label>Current Password</label>
                            <input class="form-control" type="password" name="CurrentPassword" required />
                        </div>
                        <div class="form-group">
                            <label>New Password</label>
                            <input class="form-control" type="password" id="NewPassword" name="Password" required />
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input class="form-control" type="password" id="ConfirmPassword" name="ConfirmPassword" required />
                        </div>
                    </div>
                </div>

                <div class="card w-45">
                    <div class="card-body">
                        <div class="form-group">
                            <label>Role</label>
                            <input class="form-control bg-light text-secondary" type="text" value="Customer" disabled />
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" hidden />
                            <input class="form-control bg-light text-secondary" type="text" asp-for="Email" disabled />
                        </div>

                        <div class="form-group">
                            <label>Phone Number</label>
                            <input class="form-control bg-light text-secondary" type="text" asp-for="PhoneNumber" disabled />
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex w-100 justify-content-center mt-4 mb-3">
                <button class="btn btn-primary" type="submit">Save Information</button>
            </div>
        </form>
    </div>
</div>

<style>
    .profile {
        width: 115px;
        height: 115px;
        border-radius: 50%;
        border: 1px solid grey;
    }

    .w-45 {
        width: 49%;
        margin-bottom: 8px;
    }
</style>

<script>
    function validatePasswords() {
        var newPassword = document.getElementById('NewPassword').value;
        var confirmPassword = document.getElementById('ConfirmPassword').value;
        if (newPassword !== confirmPassword) {
            alert("Passwords do not match. Please try again.");
            return false; 
        }
        return true; 
    }
</script>
