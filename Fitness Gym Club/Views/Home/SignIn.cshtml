@model SignIn
@{
    ViewData["Title"] = "Sign In";
}
<h1>Sign In</h1>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-warning text-danger fw-bold mt-4 mb-2">
        @ViewBag.Error
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="container justify-content-center">
            <form asp-action="SignIn" asp-controller="Home" method="post">
                <div class="row">
                    <div class="form-group col-12 mt-2">
                        <label asp-for="Email">Email</label>
                        <input class="form-control" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group col-12 mt-2">
                        <label asp-for="Password">Password</label>
                        <input class="form-control" asp-for="Password" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-4 mt-3">
                    <input class="form-checkbox" type="checkbox" asp-for="IsRemember">
                    <label asp-for="IsRemember">Remember Me</label>
                </div>
                <div class="col-12 d-flex justify-content-end">
                    <button class="btn btn-primary" type="submit">Sign In</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    let loginButton = document.getElementById('userbtn');
    loginButton.textContent = "Sign Up";
    loginButton.setAttribute('href', "/Home/SignUp");
</script>
