@model UserRoles
@{
    ViewData["Title"] = "Reset Password";
}
<div class="card">
    <div class="card-header">
        <div class="d-flex form-group justify-content-between">
            <a href="/Home/Index" class="btn btn-primary">Back</a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <form asp-action="SearchUser" asp-controller="ResetPassword" method="post" class="d-flex justify-content-between gap-4">
                    <input class="form-control" type="search" placeholder="User Email" asp-for="Email" />
                    <button class="btn btn-primary" type="submit">Search</button>
                </form>
            </div>
            <div class="col-xl-6 col-lg-6 col-sm-12 col-12 mt-3">
                <input asp-for="UserId" name="UserId" hidden />
                <input class="form-control bg-light" type="text" placeholder="User Name" asp-for="UserName" readonly />
            </div>
            <div class="col-xl-6 col-lg-6 col-sm-12 col-12 mt-3">
                <input class="form-control bg-light" type="text" placeholder="Gender" asp-for="Gender" readonly />
            </div>
        </div>

        @if (ViewBag.Valid)
        {
            <form asp-action="SaveResetPassword" asp-controller="ResetPassword" method="post" onsubmit="return validatePasswords()">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-sm-12 col-12 mt-3">
                        <div class="form-group">
                            <input asp-for="Email" hidden />
                            <label>New Password</label>
                            <input class="form-control" type="password" id="NewPassword" name="NewPassword" required />
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-sm-12 col-12 mt-3">
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input class="form-control" type="password" id="ConfirmPassword" name="ConfirmPassword" required />
                        </div>
                    </div>
                    <div class="col-12 mt-3">
                        <button class="btn btn-primary" type="submit">Save</button>
                    </div>
                </div>
            </form>
        }
    </div>
    </div>

   

<script>
    function validatePasswords() {
        var newPassword = document.getElementById('NewPassword').value;
        var confirmPassword = document.getElementById('ConfirmPassword').value;
        if (newPassword !== confirmPassword) {
            alert("Passwords do not match. Please try again.");
            return false;
        }
        return true;
    }
</script>
