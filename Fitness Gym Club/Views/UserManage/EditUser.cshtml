@model User
@{
    ViewData["Title"] = "Edit User";
}
<h1>Edit User</h1>
<div class="card">
    <div class="card-header">
        <div class="d-flex form-group justify-content-between">
            <a href="/UserManage/Index" class="btn btn-primary">Back</a>
        </div>
    </div>
    <div class="card-body">
        <div class="container justify-content-center">
            <form asp-action="SaveEditUser" asp-controller="UserManage" method="post">
                <div class="row">
                    <input asp-for="Id" hidden />
                    <div class="form-group col-lg-6 col-xl-6 col-sm-12 col-12 mt-2">
                        <label asp-for="FirstName">First Name</label>
                        <input class="form-control" asp-for="FirstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-6 col-xl-6 col-sm-12 col-12 mt-2">
                        <label asp-for="LastName">Last Name</label>
                        <input class="form-control" asp-for="LastName" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-6 col-xl-6 col-sm-12 col-12 mt-2">
                        <label asp-for="DateOfBirth">Date Of Birth</label>
                        <input class="form-control" type="date" asp-for="DateOfBirth" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-6 col-xl-6 col-sm-12 col-12 mt-2">
                        <label asp-for="Gender">Gender</label>
                        <select class="form-control" asp-for="Gender">
                            <option value="0">Male</option>
                            <option value="1">Female</option>
                        </select>
                    </div>

                    <div class="form-group col-lg-6 col-xl-6 col-sm-12 col-12 mt-2">
                        <label asp-for="Email">Email</label>
                        <input class="form-control" asp-for="Email" />
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-end">
                    <button class="btn btn-primary mt-3" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
