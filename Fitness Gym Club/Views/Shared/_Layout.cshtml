@{
    var loggedIn = User.Identity!.IsAuthenticated;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness Gym Club</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        a {
        border-radius: 3px;
        }

        a:hover {
        background-color: rgb(0, 0, 0, 0.2);
        color: white;
        border-radius: 3px;
        overflow: hidden;
        }
    </style>

</head>
<body class="position-relative overflow-hidden">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <span class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>FITNESS GYM CLUB</b></span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-flex justify-content-center">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item ms-2 me-2">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item ms-2 me-2">
                            <a class="nav-link" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                        </li>

                        @if (loggedIn)
                        {
                            if (@User.IsInRole("Senior Supervisor"))
                            {
                                <li class="nav-item ms-2 me-2">
                                    <a class="nav-link" asp-area="" asp-controller="Schedule" asp-action="Index">Schedules</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item ms-2 me-2">
                                    <a class="nav-link" asp-area="" asp-controller="Schedule" asp-action="UserSchedules">Schedules</a>
                                </li>
                            }
                        }

                        <li class="nav-item ms-2 me-2">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>

                        @if (loggedIn)
                        {
                            <li class="nav-item ms-2 me-2">
                                <div class="dropdown">
                                    <a class="nav-link dropdown-toggle" asp-area="" data-bs-toggle="dropdown" aria-expanded="false">Settings</a>
                                    <ul class="dropdown-menu">
                                        @if (@User.IsInRole("Senior Supervisor"))
                                        {
                                            <li><a class="dropdown-item active" href="~/UserManage/Index">User Mananges</a></li>
                                            <li><a class="dropdown-item" href="~/UserRoles/Index">User Roles</a></li>
                                            <li><a class="dropdown-item" href="~/ResetPassword/Index">Rest Password</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                        }

                                        <li><a class="dropdown-item" href="~/Home/AboutMe">About Me</a></li>
                                    </ul>
                                </div>
                            </li>
                        }
                        
                        <partial name="_User"/>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bottom-0 position-fixed text-muted w-100">
        <div class="container">
            &copy; 2025 - Fitness Gym Club - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- jQuery CDN link -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
